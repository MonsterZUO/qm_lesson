<view class="container">
  <form bindsubmit="comfirm">
    <view class="input-container">
      <label>书名</label>
      <input style="display: none;" data-value="id" name="id" value="{{book._id}}" />
      <input data-value="{{name}}" name="name" value="{{book.name}}" />
    </view>
    <view class="input-container">
      <label>作者</label>
      <input data-value="{{author}}" name="author" value="{{book.author}}" />
    </view>
    <view class="input-container">
      <label>价格</label>
      <input data-value="{{price}}" name="price" value="{{book.price}}" />
    </view>
    <view class="comfirm">
      <button formType="submit">保存</button>
 </view>
  </form>
</view>
<!--miniprogram/pages/coupon/coupon.wxml-->
<view class="container-header">
<van-cell-group>
    <van-field
      autosize
      type="textarea"
      value="{{ username }}"
      icon="question"
      placeholder="请输入用户名"
      bind:click-icon="scanCode"
    />   
</van-cell-group>
<button class="exchange">兑换</button>
</view>
<van-tabs v-model="active">
  <van-tab title="待使用">内容 1</van-tab>
  <van-tab title="已使用">内容 2</van-tab>
  <van-tab title="已失效">内容 3</van-tab>
</van-tabs>

